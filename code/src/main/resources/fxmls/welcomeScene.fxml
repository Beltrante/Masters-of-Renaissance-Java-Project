<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <ImageView fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../images/loginImage.jpg" />
   </ImageView>
   <AnchorPane>
      <Button fx:id="start" layoutX="210.0" layoutY="589.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="181.0" text="Start Game" textAlignment="CENTER">
         <font>
            <Font name="Elephant" size="24.0" />
         </font>
      </Button>
      <Button fx:id="settings" layoutX="210.0" layoutY="655.0" mnemonicParsing="false" prefHeight="23.0" prefWidth="181.0" text="Settings" />
      <TextField fx:id="serverIP" alignment="CENTER" layoutX="190.0" layoutY="186.0" prefHeight="41.0" prefWidth="221.0" promptText="Server IP" />
      <TextField fx:id="serverPort" alignment="CENTER" layoutX="190.0" layoutY="241.0" prefHeight="41.0" prefWidth="221.0" promptText="Server Port" />
      <TextArea fx:id="messageBox" blendMode="MULTIPLY" editable="false" layoutX="119.0" layoutY="360.0" prefHeight="164.0" prefWidth="364.0" />
      <ComboBox fx:id="connectionSelector" layoutX="210.0" layoutY="300.0" prefHeight="26.0" prefWidth="181.0" />
   </AnchorPane>
</StackPane>
